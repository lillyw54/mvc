<article>
  <a href="/dashboard" class="is-pulled-right">back to dashboard</a>
  <h2 class="title mt-5">Edit your post!</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{{post.title}}}" />
    </div>
    <div>
        <label for="post-content">Post your content:</label>
      <input class="textarea" name="post-content" type="text" value="{{{post.post_content}}}" />
    </div>
    <div class="is-pulled-right">
       New Post created on {{{format_date post.created_at}}}
      |
      <a href="/post/{{{post.id}}}">{{{post.comments.length}}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete post</button>
  </form>
</article>

{{{ comments post.comments}}}

<script src="/javascript/editpost.js"></script>
<script src="/javascript/deletepost.js"></script>
<script src="/javascript/comments.js"></script>